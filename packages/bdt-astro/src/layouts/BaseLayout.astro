---
import Layout from './layout.tsx';

const {title} = Astro.props;
const path = Astro.request.canonicalURL.pathname;
---
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>{title}</title>

    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link
        href="https://fonts.googleapis.com/css2?family=Actor&display=swap"
        rel="stylesheet"
    />
    <link rel="stylesheet" href="/style/global.css">
    <link rel="stylesheet" href={Astro.resolve("../styles/style.scss")}>
</head>
<body>
    <main class="centered">
        <Layout path={path} client:load><slot /></Layout>
    </main>
</body>
</html>
