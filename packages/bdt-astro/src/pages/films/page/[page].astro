---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { FilmEntry } from "../../../components/FilmEntry";
import getAllFilms from "@film-fetcher/getAllFilms";

export async function getStaticPaths({ paginate }) {
  const films = await getAllFilms();
  return paginate(films, { pageSize: 10 });
}

const { page } = Astro.props;
---

<BaseLayout>
  <div class="stack listing">
    <h1>Films: Page {page.currentPage}</h1>

    {page.data.map((film) => <FilmEntry film={film} />)}

    <!-- <Pagination tag={`a`} pageNumber={parseInt(pagenum, 10)} urlRoot={`/films/page`} pageInfo={{hasNextPage: meta.hasNextPage, hasPreviousPage: meta.hasPreviousPage}} /> -->
  </div>
</BaseLayout>
