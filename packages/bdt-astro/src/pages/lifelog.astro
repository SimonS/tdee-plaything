---
import BaseLayout from '../layouts/BaseLayout.astro'
import { LifeLogEntry } from '../components/LifeLogEntry.tsx'
import Pagination from "@components/pagination/pagination.tsx";

import getAll from "@lifelog-fetcher/getAll.ts";

const { data, meta } = await getAll();
---

<BaseLayout title="LifeLog">
  <div class="stack listing">
    <h1>LifeLog!</h1>

    <div class="content">
      <p>This is an aggregation of everything I log on this site. Like my own personal <a href="https://en.wikipedia.org/wiki/FriendFeed">FriendFeed</a>. It's ugly as sin, but a mid-step to something that's hopefully a bit more interesting, as well as a scaffold to build upon.</p>
    </div>

    {data.map(entry => <LifeLogEntry entry={entry} />)}

    <Pagination tag={`a`} pageNumber={1} urlRoot={`/lifelog/page`} pageInfo={{hasNextPage: meta.hasNextPage, hasPreviousPage: meta.hasPreviousPage}} />
  </div>
</BaseLayout>
